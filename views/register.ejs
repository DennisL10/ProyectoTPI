<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/style.css">
    <title>REGISTRARME</title>
</head>
<body>
    
    <div class="register-form">
        <h1>Registrate</h1>
        <form action="register" method="post">
            <label for="nombre">Nombre Completo</label>
            <input type="text" name="nom" placeholder="Introduzca su nombre" required>

            <label for="user">Usuario</label>
            <input type="text" name="user" placeholder="Introduzca un usuario" required>

            <label for="rol">Rol</label>
            <select name="rol" id="rol" class="select-css">
                <option value="seleccionar" selected>Seleccionar</option>
                <option value="data entry">Usuario</option>
                <option value="admin" selected>Administrador</option>
            </select>

            <label for="pass">Contraseña</label>
            <input type="password" name="pass" placeholder="Introduzca una contraseña" required>

            <div style="display: inline;">
                <a href="/" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Guardar">
            </div>

        </form>

    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(()=>{
                window.location='/ <%= ruta %>'
            })
        </script>
    <% } %>

</body>
</html>